# Automatically normalize line endings for all text-based files
* text=auto

# For the following file types, normalize line endings to LF on
# checkin and prevent conversion to CRLF when they are checked out
.*  text eol=lf
*.kt    text eol=lf
*.kts   text eol=lf
*.csv   text eol=lf
*.sql   text eol=lf
*.json  text eol=lf
*.md    text eol=lf
*.sh    text eol=lf
*.bat   text eol=lf
*.txt   text eol=lf
*.xml   text eol=lf
*.yaml  text eol=lf
*.yml   text eol=lf
*.properties    text eol=lf
*.feature   text eol=lf
